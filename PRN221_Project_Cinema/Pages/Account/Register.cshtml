@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PRN221_Project_Cinema.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Login to Cinema Hub";
    Layout = "_Layout1";
}


<div class="w-50 py-5 mx-auto">
    <h3 class="mb-4 text-center">Sign in and enjoy the best movies</h3>
    <p class="mt-2 mb-2">@ViewData["emailExist"]</p>
    <form asp-page="/Register" method="post">
        <div class="mb-2">
            <label class="form-label fw-bold">Full Name *</label>
            <input required class="form-control"
                   type="text"
                   placeholder="Enter your name"
                   asp-for="@Model.person.Fullname" />
            <span class="text-danger" asp-validation-for="@Model.person.Fullname"></span><br />
        </div>
        <div class="mb-2">
            <label class="form-label fw-bold">Email Address *</label>
            <input required class="form-control"
                   type="email"
                   placeholder="Enter email address"
                   asp-for="@Model.person.Email" />
            <span class="msg-error" asp-validation-for="@Model.person.Email"></span><br />
        </div>
        <div class="mb-2 w-25">
            <label class="form-label fw-bold">Gender</label>
            <select class="form-select" name="gender">
                <option selected value="Nam">Male</option>
                <option value="Nữ">Female</option>
                <option value="Khác">Other</option>
            </select>
        </div>
        <div class="mb-4">
            <label class="form-label fw-bold">Password *</label>
            <input required class="form-control"
                   type="password"
                   placeholder="*******"
                   asp-for="@Model.person.Password" />
            <span class="text-danger" asp-validation-for="@Model.person.Password"></span><br />
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold">Confirm password *</label>
            <input required class="form-control"
                   type="password"
                   placeholder="*******"
                   name="confirmPass"/>
            <span class="text-danger">@ViewData["passNotMatch"]</span><br />
        </div>
       
        <input class="btn w-100 btn-primary shadow" type="submit" value="Register" />

    </form>
</div>