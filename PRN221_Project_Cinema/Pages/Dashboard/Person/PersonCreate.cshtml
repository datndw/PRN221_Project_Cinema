@page "/dashboard/person/create"
@model PRN221_Project_Cinema.Pages.PersonCreateModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Create Account";
}

<div>
    <a class="btn btn-primary p-2 m-2" asp-page="./Person">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1 bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>Back to Account List
    </a>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        <form method="post">
            <fieldset class="border rounded-3 p-3">
                <legend class="float-none w-auto px-3">Create a new account</legend>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Person.Fullname" class="control-label"></label>
                    <input asp-for="Person.Fullname" class="form-control" />
                    <span asp-validation-for="Person.Fullname" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Person.Gender" class="control-label"></label>
                    <select asp-for="Person.Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Person.Gender" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Person.Email" class="control-label"></label>
                    <input asp-for="Person.Email" class="form-control" />
                    <span asp-validation-for="Person.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Person.Password" class="control-label"></label>
                    <input asp-for="Person.Password" class="form-control" type="password" />
                    <span asp-validation-for="Person.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Person.Type" class="control-label"></label>
                    <select asp-for="Person.Type" class="form-control">
                        <option value="1">Admin</option>
                        <option value="2">Member</option>
                    </select>
                    <span asp-validation-for="Person.Type" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Person.IsActive" class="control-label"></label>
                    <select asp-for="Person.IsActive" class="form-control">
                        <option value="True">Active</option>
                        <option value="False">Inactive</option>
                    </select>
                    <span asp-validation-for="Person.IsActive" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
