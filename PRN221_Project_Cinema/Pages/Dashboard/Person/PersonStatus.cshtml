@page "/dashboard/person/status"
@model PRN221_Project_Cinema.Pages.PersonStatusModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Account Status Changer";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Person.PersonId" />
            <div class="form-group">
                <label asp-for="Person.IsActive" class="control-label"></label>
                <input asp-for="Person.IsActive" class="form-control" />
                <span asp-validation-for="Person.IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Person">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
