@page "/dashboard/movie/delete"
@model PRN221_Project_Cinema.Pages.MovieDeleteModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Delete Movie";
}
<h3>Are you sure you want to delete this movie?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.MovieId)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Movie.MovieId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Movie">Back to List</a>
    </form>
</div>
