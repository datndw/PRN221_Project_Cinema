@page "/dashboard/movie/edit"
@model PRN221_Project_Cinema.Pages.MovieEditModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Movie Edit";
}
<div>
    <a class="btn btn-primary p-2 m-2" asp-page="./Movie">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1 bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>Back to Movie List
    </a>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        <form method="post">
            <fieldset class="border rounded-3 p-3">
                <legend class="float-none w-auto px-3">Edit movie information</legend>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Movie.Title" class="control-label">Title</label>
                    <input asp-for="Movie.Title" class="form-control" />
                    <span asp-validation-for="Movie.Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Movie.Year" class="control-label">Year</label>
                    <input asp-for="Movie.Year" class="form-control" />
                    <span asp-validation-for="Movie.Year" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Movie.Image" class="control-label">Image</label>
                    <input asp-for="Movie.Image" class="form-control" />
                    <span asp-validation-for="Movie.Image" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Movie.Description" class="control-label">Description</label>
                    <textarea asp-for="Movie.Description" class="form-control"></textarea>
                    <span asp-validation-for="Movie.Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Movie.GenreId" class="control-label">Genre</label>
                    <select asp-for="Movie.GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                    <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
