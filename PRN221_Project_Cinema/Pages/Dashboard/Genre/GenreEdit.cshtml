@page "/dashboard/genre/edit"
@model PRN221_Project_Cinema.Pages.GenreEditModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Edit Genre";
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Genre.GenreId" />
            <div class="form-group">
                <label asp-for="Genre.Description" class="control-label"></label>
                <input asp-for="Genre.Description" class="form-control" />
                <span asp-validation-for="Genre.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Genre">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}