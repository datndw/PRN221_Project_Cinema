@page "/dashboard/genre"
@using PRN221_Project_Cinema.Models;
@model PRN221_Project_Cinema.Pages.GenreModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Genre Manager";
}
<main class="container">
    <div class="row">
        <div class="container">
            <h1>Genre Manager</h1>
            <div class="d-flex justify-content-between mb-5 mt-5">
                <div>
                    <form>
                        <div class="d-inline-flex">
                            <input type="text" class="form-control" asp-for="GenreSearch" placeholder="Search your genre">
                            <button type="submit" class="btn btn-primary mx-2">Search</button>
                        </div>
                    </form>
                </div>
                <a class="mb-4 btn btn-primary" asp-page="/Dashboard/Genre/GenreCreate">Create New Genre</a>
            </div>
            <div class="row">
                @if (Model.Genres.Count == 0)
                {
                    <div class="alert alert-warning" role="alert">
                        No genre found
                    </div>
                }
                else
                {
                    <div class="row">
                        <table class="table table-striped">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var genre in Model.Genres)
                                {
                                    <tr>
                                        <td class="align-middle">@genre.GenreId</td>
                                        <td class="align-middle"><a class="text-decoration-none fw-bold" asp-page="./GenreDetails" asp-route-id="@genre.GenreId">@genre.Description</a></td>
                                        <td>
                                            <a class="btn btn-outline-primary" asp-page="./GenreEdit" asp-route-id="@genre.GenreId">Edit</a> |
                                            <a class="btn btn-outline-primary" asp-page="./GenreDelete" asp-route-id="@genre.GenreId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</main>
